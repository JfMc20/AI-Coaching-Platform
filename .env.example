# Environment variables for MVP Coaching AI Platform
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_DB=mvp_coaching
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# AI Services Configuration
OLLAMA_URL=http://ollama:11434
CHROMADB_URL=http://chromadb:8000
EMBEDDING_MODEL=nomic-embed-text
CHAT_MODEL=llama2:7b-chat

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:8001
AI_ENGINE_SERVICE_URL=http://ai-engine-service:8003

# File Upload Configuration
MAX_UPLOAD_SIZE=52428800
UPLOADS_DIR=/app/uploads

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Security
SECURE_COOKIES=false
SESSION_TIMEOUT=3600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Password Reset Configuration
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15
FRONTEND_URL=http://localhost:3000

# Email Service Configuration (for future implementation)
EMAIL_SERVICE_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@example.com
FROM_NAME="MVP Coaching AI Platform"